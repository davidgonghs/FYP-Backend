<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dghs.fyp.backend.mapper.UsersMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dghs.fyp.backend.entity.User">
        <id column="user_id" property="userId" />
        <result column="user_img" property="userImg" />
        <result column="nickname" property="nickname" />
        <result column="sign" property="sign" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="gender" property="gender" />
        <result column="birthday" property="birthday" />
        <result column="password" property="password" />
        <result column="created_time" property="createdTime" />
        <result column="updated_time" property="updatedTime" />
        <result column="updated_by" property="updatedBy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, user_img, nickname, sign, email, phone, gender, birthday, password, created_time, updated_time, updated_by
    </sql>

<!--    select list-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
    </select>

</mapper>
